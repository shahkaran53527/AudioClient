<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MusicServiceClient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="36dp"
        android:text="\nWelcome to the Audio Client App"></TextView>

    <EditText
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_centerInParent="true"
        android:layout_marginTop="65dp"
        android:hint="Enter Song Number (1-6)"
        android:inputType="number">

    </EditText>

    <Button
        android:id="@+id/startService"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="26dp"
        android:text="Start Service"></Button>

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startService"
        android:layout_marginTop="44dp"
        android:text="Play"></Button>

    <Button
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startService"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="44dp"
        android:layout_toRightOf="@id/play"
        android:text="Pause"></Button>

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startService"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="44dp"
        android:layout_toRightOf="@id/resume"
        android:text="Stop"></Button>

    <Button
        android:id="@+id/resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startService"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="44dp"
        android:layout_toRightOf="@id/pause"
        android:text="Resume"></Button>

    <Button
        android:id="@+id/stopService"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/stop"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:text="Stop Service"></Button>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stopService"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="After Service is Bound, songs will appear here"
        android:textSize="20dp">
        ">
    </TextView>

</RelativeLayout>